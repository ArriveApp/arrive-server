<% active_page_is :school_management %>

<%= form_for @school, html: {class: 'form-inline well text-center'} do |f| %>
    <%= render partial: 'shared/errors', locals: {model: @school} %>

    <%= f.label :name, 'School' %>
    <%= f.text_field :name, autofocus: true %>

    <%= f.submit class: 'btn btn-primary submit', value: 'Add School' %>
<% end %>

<% if @schools.any? %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>School Name</th>
      </tr>
      </thead>
      <tbody>
      <% @schools.each do |school| %>
          <tr>
            <td><%= school.name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <%= render partial: 'shared/help_text', locals: {help_text: 'No schools yet. Use the form above to create schools.'} %>
<% end %>