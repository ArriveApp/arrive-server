<% active_page_is :school_management %>

<div class='text-center'>
  <%= form_for @school, url: schools_path do |f| %>
      <%= render partial: 'shared/errors', locals: { model: @school } %>

      <div>
        <%= f.label :name, 'School:' %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.submit class: 'btn', value: 'Add School' %>
      </div>
  <% end %>
</div>

<% @all_schools.each do |school| %>
    <p><%= school.name %></p>
<% end %>
