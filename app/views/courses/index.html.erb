<% active_page_is :course_management %>

<div class='text-center'>
  <%= form_for @course, url: school_courses_path(school_id: current_user.school.id) do |f| %>
      <%= render partial: 'shared/errors', locals: { model: @course } %>

      <div>
        <%= f.label :name, 'Course:' %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.submit class: 'btn', value: 'Save Course' %>
      </div>
  <% end %>
</div>

<% @courses.each do |course| %>
    <p><%= course.name %></p>
<% end %>
